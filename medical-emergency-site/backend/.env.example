# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/medical_emergency_db
DB_NAME=medical_emergency_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=24h

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps API (for geocoding and directions)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenWeatherMap API (for weather conditions affecting transport)
OPENWEATHER_API_KEY=your_openweather_api_key

# Emergency Services Integration
EMERGENCY_DISPATCH_API_URL=https://api.emergency-dispatch.local
EMERGENCY_DISPATCH_API_KEY=your_emergency_dispatch_api_key

# Hospital Management System Integration
HMS_API_URL=https://api.hospital-management.local
HMS_API_KEY=your_hms_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:8080,https://emergency-care-locator.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Real-time Updates
ENABLE_REAL_TIME_UPDATES=true
SOCKET_IO_ORIGINS=http://localhost:8080,https://emergency-care-locator.com

# Backup and Recovery
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30